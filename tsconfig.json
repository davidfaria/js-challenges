{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "build",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "vitest/globals"
    ]
  },
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*.ts"]

}
